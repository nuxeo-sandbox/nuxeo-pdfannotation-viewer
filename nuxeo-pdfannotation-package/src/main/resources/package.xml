<package type="addon" name="nuxeo-pdf-annotation" version="@VERSION@">
  <title>Nuxeo PDF Annotation</title>
  <description>
    <div>
      <h1>Annotate PDFs</h1>
      <p>Annotate files, attachments, and images with annotation tools.  Adds the 'Annotations' permission to allow others to view the annotation layer.</p>
      <p>Original author: Klyff Harlley, https://github.com/klyff/nuxeo-pdfannotation-viewer</p>
    </div>
  </description>
  <home-page>https://github.com/nuxeo-sandbox/nuxeo-pdfannotation-viewer</home-page>
  <vendor>Nuxeo</vendor>
  <installer restart="true" />
  <uninstaller restart="true" />
  <hotreload-support>false</hotreload-support>
  <require-terms-and-conditions-acceptance>false</require-terms-and-conditions-acceptance>
  <nuxeo-validation>none</nuxeo-validation>
  <production-state>proto</production-state>
  <supported>false</supported>
  <platforms>
    <platform>server-@DISTRIB_VERSION@</platform>
    <platform>server-@DISTRIB_VERSION@-HF*</platform>
    <platform>@LTS_VERSION@</platform>
  </platforms>
  <dependencies>
    <package>nuxeo-jsf-ui</package>
    <package>nuxeo-web-ui</package>
  </dependencies>
  <license>Apache License, Version 2.0</license>
  <license-url>http://www.apache.org/licenses/LICENSE-2.0</license-url>
  <visibility>DEV</visibility>
</package>
